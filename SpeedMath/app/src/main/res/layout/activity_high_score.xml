<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000"
        android:weightSum="4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/rank"
            android:layout_weight="1"
            android:text="Rank"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginLeft="7dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/name"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/highScore"
            android:layout_weight="1"
            android:text="Score"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:textSize="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/time"
            android:layout_weight="1"
            android:text="Time"
            android:textColor="@android:color/holo_blue_dark"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginRight="5dp" />
        </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.alanwei.speedmath.HighScoreActivity"
        android:background="#000"
        android:orientation="horizontal"
        android:weightSum="4">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_rank"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_name"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_highScore"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_time"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="See other players!"
            android:layout_marginTop="30dp"
            android:onClick="showPlayers"/>
    </LinearLayout>
</LinearLayout>


